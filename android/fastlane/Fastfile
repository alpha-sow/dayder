# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :android do
    desc "Upload to appDistrib"
    lane :uploadToAppDistrib do
        androidDebug
        firebase_app_distribution(
            app: ENV["FIREBASE_APP_ID_ANDROID"],
            service_credentials_file: "fastlane/service-account-key.json",
            groups: "testers",
            release_notes: "Lots of amazing new features to test out!",
            android_artifact_path:"../build/app/outputs/apk/debug/app-debug.apk",
            android_artifact_type:"AAB",
        )
    end

    desc "Build app debug"
    lane :androidDebug do
        gradle(task: 'clean')
        build_android_app(
            task: 'assembleDebug',
        )
    end

    desc "Upload to playstore"
    lane :uploadToPlayStore do
        androidRelease
        upload_to_play_store(
            json_key: "fastlane/play-store-credentials.json",
            aab: "../build/app/outputs/bundle/release/app-release.aab",
            release_status:"draft"
        )
    end

    desc "Build app bundle release"
    lane :androidRelease do
        gradle(task: 'clean')
        build_android_app(
            task: 'bundle',
            build_type: 'Release',
            properties: {
                "android.injected.signing.store.file" => ENV["KEYSTORE_PATH"],
                "android.injected.signing.store.password" => ENV["ANDROID_STORE_PASSWORD"],
                "android.injected.signing.key.alias" => ENV["ANDROID_KEY_ALIAS"],
                "android.injected.signing.key.password" => ENV["ANDROID_STORE_PASSWORD"],
            }
        )
    end
end
